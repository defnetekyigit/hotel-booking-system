datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id        // Firebase UID
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())

  bookings  Booking[]
}

model Hotel {
  id          String   @id @default(uuid())
  name        String
  city        String
  country     String
  address     String
  adminUserId String   // Firebase UID

  rooms       Room[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Room {
  id          String   @id @default(uuid())
  hotelId     String
  type        String
  capacity    Int
  basePrice   Float

  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  availability RoomAvailability[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RoomAvailability {
  id          String   @id @default(uuid())
  roomId      String
  date        DateTime
  isAvailable Boolean  @default(true)
  price       Float

  room        Room     @relation(fields: [roomId], references: [id])

  @@unique([roomId, date])
}

model Booking {
  id         String   @id @default(uuid())
  roomId     String
  userId     String
  startDate  DateTime
  endDate    DateTime
  guestCount Int
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
